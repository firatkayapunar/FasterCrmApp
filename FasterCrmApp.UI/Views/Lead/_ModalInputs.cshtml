@model LeadModalInputViewModel

<div class="input-group input-group-outline is-filled my-3">
    <label for="clientid" class="form-label">Müşteri</label>
    <select class="form-control" id="clientid" @(Model.IsReadonly ? "disabled" : "")>
    </select>
</div>

<div class="input-group input-group-outline my-3">
    <label class="form-label">Özet</label>
    <input id="summary" type="text" class="form-control" @(Model.IsReadonly ? "readonly" : "") autocomplete="off" />
</div>

<div class="input-group input-group-outline my-3">
    <label class="form-label">Fiyat</label>
    <input id="price" type="number" class="form-control" @(Model.IsReadonly ? "readonly" : "") />
</div>

@if (Model.HasTypeField)
{
    <div class="input-group input-group-outline is-filled my-3">
        <label class="form-label" id="leadTypeId">Lead Tipi</label>
        <select id="leadType" class="form-control" @(Model.IsDisabled ? "disabled" : string.Empty)>
            @{
                @foreach (var leadType in FasterCrmApp.Services.Concrete.LeadTypeHelper.GetAllLeadTypes())
                {
                    <option value="@leadType.Key">@leadType.Value</option>
                }
            }
        </select>
    </div>
}

<div class="input-group input-group-outline my-3">
    <label class="form-label">Açıklama</label>
    <input id="description" type="text" class="form-control" @(Model.IsReadonly ? "readonly" : "") autocomplete="off" />
</div>

<div class="input-group input-group-outline is-filled my-3">
    <label for="userid" class="form-label">Atanan</label>
    <select class="form-control" id="userid" @(Model.IsReadonly ? "disabled" : "")>
    </select>
</div>

@if (Model.HasID)
{
    <input id="leadid" type="hidden" value="" />
}
