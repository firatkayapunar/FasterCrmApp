@model IssueModalInputViewModel

<div class="input-group input-group-outline my-3">
    <label class="form-label">Özet</label>
    <input id="summary" type="text" class="form-control" @(Model.IsReadonly ? "readonly" : string.Empty) autocomplete="off" />
</div>

<div class="input-group input-group-outline is-filled my-3">
    <label class="form-label">Son Tarih</label>
    <input id="duedate" type="datetime-local" class="form-control" @(Model.IsReadonly ? "readonly" : string.Empty) value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")"
           autocomplete="off" />
</div>

@if (Model.HasCompletedField)
{
    <div class="form-check my-3">
        <input id="iscompleted" type="checkbox" class="form-check-input" @(Model.IsDisabled ? "disabled" : string.Empty) />
        <label class="custom-control-label" for="iscompleted">Tamamlandı</label>
    </div>
}

<div class="input-group input-group-outline is-filled my-3" @(Model.IsDisabled ? "disabled" : string.Empty)>
    <label class="form-label" for="userid">Atanan</label>
    <select id="userid" class="form-control">
    </select>
</div>

@if (Model.HasID)
{
    <input id="issueid" type="hidden" value="" />
}
